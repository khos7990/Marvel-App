<!DOCTYPE html>
<html>
  <head>
    <title>Homepage</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1 class="title">The Marvelous Page</h1>
    <nav>
      <% if (user) { %>
          <a href="/logout">Log Out</a>
      <% } else { %>
          <a href="/auth/google">Login With Google</a>
      <% } %>
      </nav>
      <% if (user) { %>
              <h1> Welcome <%= user.name %> </h1>
          <% } %>

          <form action="/movies" method="GET">
            <input type="text" name="movie" placeholder="Enter movie name" autocomplete="off">
            <button>Submit</button>
          </form>
          <div class="container">

             <% movieData.data.forEach(function(m) { %>
            <div class="movieDp">  <%= m.title %> 
          <div class="showMore"> <a class= "showLink" href= "/movies/<%=m.id%>">Show More</a> </div>
            </div>
             <% }) %> 

          </div>
  </body>
</html>
