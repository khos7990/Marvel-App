<%- include('../partials/header') -%>
<body class="reviewPage mt-5">
  <a class="goBackBtn" href="/movies/<%=movieid%>">GO BACK</a>
  <h1>Create a Review</h1>

  <div class="container justify-content-center">
    <form
      class="form-control-lg"
      action="/movies/<%=movieid%>/review"
      method="POST"
    >
      <textarea
        class="form-control-lg reviewPageTextArea"
        rows="10"
        cols="50"
        name="text"
        required
      ></textarea>
      <div class="m-auto w-auto d-flex justify-content-between">
        <select class="rating w-50 me-4 rounded-3" type="number" name="rating">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </select>
        <button type="submit" class="submitReview w-50 rounded-3">
          Submit
        </button>
      </div>
    </form>
  </div>
</body>
<%- include('../partials/footer') -%>
